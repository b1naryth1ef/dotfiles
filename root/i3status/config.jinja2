general {
        colors = true
        color_good = "#a3be8c"
        color_bad = "#bf616a"
        color_degraded = "#d08770"
        output_format = "i3bar"
        interval = 10
}

order += "wireless _first_"
order += "ethernet _first_"
{% if pillar['machine_type'] == 'laptop' %}
order += "battery 0"
order += "battery 1"
{% endif %}
order += "tztime local"
order += "tztime utc"

wireless _first_ {
        format_up = "W: %essid %bitrate %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip"
        format_down = "E: down"
}

battery 0 {
	format = "%status %percentage"
}

battery 1 {
	format = "%status %percentage"
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}

tztime utc {
        format = "%H:%M"
        timezone = "UTC"
}

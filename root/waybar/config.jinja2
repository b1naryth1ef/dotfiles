{
  "layer": "bottom",
  "position": "bottom",
  "height": 25,
  "modules-left": ["sway/workspaces", "sway/mode"],
  "modules-center": ["clock"],
  "modules-right": [
    "backlight",
    "memory",
    "network",
    "battery",
    "temperature",
    "pulseaudio",
    "custom/media",
    "tray"
  ],
  "sway/workspaces": {
    "disable-scroll": true,
    "all-outputs": false,
    "format": "{name}",
    "format-icons": {
      "urgent": "",
      "focused": "",
      "default": ""
    }
  },
  "sway/mode": {
    "format": "<span style=\"italic\">{}</span>"
  },
  "clock": {
    "format": "{:%Y-%m-%d %H:%M}",
    "tooltip": false
  },
  "memory": {
    "format": "🐏 {}%",
    "tooltip": false
  },
  "temperature": {
    "critical-threshold": 70,
    "format": "{icon} {temperatureC}°",
    "format-icons": ["🥶", "😐", "🥵"]
  },
  "backlight": {
    "format": "{icon} {percent}%",
    "format-icons": ["🔦"]
  },
  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "tooltip": false,
    "format": "{icon} {capacity}%",
    "format-charging": "🔌 {capacity}%",
    "format-plugged": "🔌 {capacity}%",
    "format-alt": "{icon} {time}",
    "format-icons": ["🔋"]
  },
  "network": {
    "format-wifi": "  {essid} ({signalStrength}%)",
    "format-ethernet": " {ifname}: {ipaddr}/{cidr}",
    "format-linked": " {ifname} (No IP)",
    "format-disconnected": "Disconnected",
    "format-alt": "{ifname}: {ipaddr}/{cidr}",
    "tooltip": false
  },
  "custom/media": {
    "format": "{}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "",
      "default": ""
    },
    "escape": true,
    "on-click": "playerctl play-pause",
    "on-click-right": "playerctl next",
    "exec": "python3 ~/.config/waybar/modules/mediaplayer.py --player spotify 2> /dev/null"
  },
  "tray": {
    "icon-size": 16,
    "spacing": 10
  },
  "pulseaudio": {
    "format": "🔈 {volume}%",
    "on-scroll-up": "pactl set-sink-volume 0 +10%",
    "on-scroll-down": "pactl set-sink-volume 0 -10%",
    "on-click": "pactl set-sink-mute 0 toggle",
    "tooltip": false
  }
}

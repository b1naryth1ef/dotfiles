general {
        colors = true
        color_good = "#a3be8c"
        color_bad = "#bf616a"
        color_degraded = "#d08770"
        output_format = "i3bar"
        interval = 5
}

order += "disk /home"
order += "volume master"
order += "cpu_usage 0"
order += "run_watch VPN"
order += "wireless _first_"
order += "ethernet _first_"

order += "tztime local"
order += "tztime utc"

wireless _first_ {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip"
        format_down = "E: down"
}




cpu_usage {
    format = "cpu: %usage"
}

run_watch VPN {
        pidfile = "/var/run/openvpn.pid"
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}

tztime utc {
        format = "%H:%M"
        timezone = "UTC"
}

load {
        format = "%1min"
}

disk "/home" {
        format = "free: %free"
}

